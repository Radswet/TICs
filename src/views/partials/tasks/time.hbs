<div class="col-start-1 px-8 pt-6 pb-8 mb-4 ml-5 max-w-3xl box-card">
  <table class="table-auto">
    <thead>
      <tr>
        <th>Index</th>
        <th>fecha</th>
      </tr>
    </thead>
    <tbody>
      {{#if data.time}}
        {{#each data.time}}
          <tr>
            <td>
              <div class=" pt-3">
                <a
                  href="/task/{{_id}}"
                  class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full"
                >
                  {{inc @index}}
                </a>
              </div>
            </td>
            <td><a class="ml-5">{{date fecha "DD-MM-yyyy"}}</a></td>
          </tr>
        {{/each}}
      {{/if}}
    </tbody>
  </table>
</div>